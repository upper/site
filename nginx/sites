server {
  server_name upper.io dev.upper.io;
  
  set $vanity http://upper-vanity:9001;
  set $legacy_docs http://upper-legacy-docs:9000;
  set $docs http://upper-docusaurus:80;

  resolver 127.0.0.11 valid=5s;

  root /var/www;
  
  location /css {
    proxy_pass $docs;
  }

  location /js {
    proxy_pass $docs;
  }
  
  location /img {
    proxy_pass $docs;
  }
  
  location = /blog/ {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $docs/blog/;
  }
  
  location /blog {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $docs;
  }
  
  location = /v4 {
    return 302 /v4/;
  }
  
  location = / {
    return 302 /v4/;
  }
  
  location = /v4/ {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $docs/;
  }
  
  location /v4/ {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $docs;
  }

  location / {
    set $pass 0;
    if ($arg_go-get = 1) {
      set $pass 1;
    }
    if ($request_uri ~ git-upload-pack) {
      set $pass 1;
    }
    if ($pass = 1) {
      return 404;
    }

    try_files =404 @vanity;
    error_page 404 = @vanity;
    log_not_found off;
  }

  location @vanity {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $vanity;
    proxy_intercept_errors on;
    recursive_error_pages on;

    set $pass 0;
    if ($arg_go-get = 1) {
      set $pass 1;
    }
    if ($request_uri ~ git-upload-pack) {
      set $pass 1;
    }
    if ($pass = 0) {
      return 404;
    }

    error_page 404 = @fallback;
    log_not_found off;
  }

  location @fallback {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $legacy_docs;
  }
}

server {
  server_name tour.upper.io tour.dev.upper.io;
  
  set $tour http://upper-tour:4000;

  resolver 127.0.0.11 valid=5s;

  root /var/www;

  location / {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $tour;
  }
}

server {
  server_name demo.upper.io demo.dev.upper.io;

  set $playground http://upper-playground-webapp:3000;
  set $compiler   http://upper-unsafebox:8080;

  resolver 127.0.0.11 valid=5s;

  location = / {
    return 302 https://tour.upper.io;
  }

  location /compile {
    if ($request_method = 'OPTIONS') {
      add_header 'Access-Control-Allow-Origin' '*';
      add_header 'Access-Control-Allow-Methods' 'POST, OPTIONS';
      add_header 'Access-Control-Max-Age' 1728000;
      add_header 'Content-Type' 'text/plain; charset=utf-8';
      add_header 'Content-Length' 0;
      return 204;
    }
    if ($request_method = 'POST') {
      add_header 'Access-Control-Allow-Origin' '*';
      add_header 'Access-Control-Allow-Methods' 'POST, OPTIONS';
      add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';
    }

    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $compiler;
  }

  location / {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass $playground;
  }
}
